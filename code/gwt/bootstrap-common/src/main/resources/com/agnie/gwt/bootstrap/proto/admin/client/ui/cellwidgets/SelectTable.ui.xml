<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
	xmlns:b.t='urn:import:org.gwtbootstrap3.client.ui.gwt' xmlns:p='urn:import:com.agnie.gwt.bootstrap.proto.admin.client.ui'>
	<ui:with field='msg'
		type="com.agnie.gwt.bootstrap.proto.admin.client.Messages">
	</ui:with>
	<ui:style
		type="com.agnie.gwt.bootstrap.proto.admin.client.ui.cellwidgets.SelectTable.SelectTableStyle">
		.pagination {
			margin: 0 !important;
		}
		
		.clear-selction {
			cursor: pointer;
			text-decoration: none !important;
		}
		
		.cell-table {
			margin-bottom: 0px !important;
		}
		
		.heading {
			padding-bottom: 0px;
			min-height: 70px;
		}
		
		.footer {
			padding-top: 0px;
		}
		</ui:style>
	<g:HTMLPanel addStyleNames="panel">
		<header class="panel-heading {style.heading}" ui:field="header">
			<p:SearchBox ui:field="search" placeHolder="{msg.label_search}">
			</p:SearchBox>
			<div>
				<g:Anchor ui:field="clear" addStyleNames="{style.clear-selction}"
					text="{msg.label_clear_selection}"></g:Anchor>
			</div>
			<div>
				<g:Anchor ui:field="remove" addStyleNames="{style.clear-selction}"
					text="{msg.label_remove_selected}"></g:Anchor>
			</div>
		</header>
		<div class="panel-body">
			<b.t:CellTable ui:field="table" addStyleNames="{style.cell-table}">
			</b.t:CellTable>
		</div>
		<div class="panel-footer {style.footer}">
			<p:PageRangeInfo ui:field="pageInfo" />
			<p:SimplePagination paginationSize="SMALL"
				ui:field="pager" limit="3" addStyleNames="{style.pagination}">
				<b:AnchorListItem enabled="false" icon="ANGLE_DOUBLE_LEFT" />
				<b:AnchorListItem active="true" enabled="true"
					text="1" />
				<b:AnchorListItem enabled="true" text="2" />
				<b:AnchorListItem enabled="true" text="3" />
				<b:AnchorListItem enabled="true" icon="ANGLE_DOUBLE_RIGHT" />
			</p:SimplePagination>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 