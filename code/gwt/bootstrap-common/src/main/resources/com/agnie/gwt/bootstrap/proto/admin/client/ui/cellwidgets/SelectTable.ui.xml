<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
	xmlns:b.t='urn:import:org.gwtbootstrap3.client.ui.gwt' xmlns:p='urn:import:com.agnie.gwt.bootstrap.proto.admin.client.ui'>
	<ui:style>
	.pagination {
		margin: 0 !important;
	}
	
	.clear-selction {
		cursor: pointer;
		text-decoration: none !important;
	}
	
	.cell-table {
		margin-bottom: 0px !important;
	}
	
	.heading {
		padding-bottom: 0px;
	}
	
	.footer {
		padding-top: 0px;
	}
	</ui:style>
	<g:HTMLPanel addStyleNames="panel">
		<header class="panel-heading {style.heading}">
			<p:SearchBox ui:field="search" placeHolder="search">
			</p:SearchBox>
			<g:Anchor ui:field="clear" addStyleNames="{style.clear-selction}">Clear Selection</g:Anchor>
		</header>
		<div class="panel-body">
			<b.t:CellTable ui:field="table" addStyleNames="{style.cell-table}">
			</b.t:CellTable>
		</div>
		<div class="panel-footer {style.footer}">
			<p:PageRangeInfo ui:field="pageInfo" />
			<p:SimplePagination paginationSize="SMALL"
				ui:field="pager" limit="3" addStyleNames="{style.pagination}">
				<b:AnchorListItem enabled="false" icon="ANGLE_DOUBLE_LEFT" />
				<b:AnchorListItem active="true" enabled="true"
					text="1" />
				<b:AnchorListItem enabled="true" text="2" />
				<b:AnchorListItem enabled="true" text="3" />
				<b:AnchorListItem enabled="true" icon="ANGLE_DOUBLE_RIGHT" />
			</p:SimplePagination>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 