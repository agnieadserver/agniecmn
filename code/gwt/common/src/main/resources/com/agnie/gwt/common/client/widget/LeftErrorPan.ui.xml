<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:a="urn:import:com.google.gwt.aria.client">
	<ui:with field='res'
		type='com.agnie.gwt.common.client.widget.LeftErrorPanResources' />
	<ui:with field='msg' type='com.agnie.gwt.common.client.Messages' />

	<ui:style>
		.message {
			color: white;
			font-size: 13px;
			font-weight: bold;
		}
	</ui:style>

	<g:HTMLPanel>
		<div ui:field="textBoxTriangle" class="{res.css.leftErrorPanTrianlge}"></div>
		<g:HTMLPanel ui:field="errorPanBody" addStyleNames='{res.css.errorPanBody}'>
			<table width="100%">
				<tr>
					<td style="width: 20px;">
						<g:Anchor ui:field="img" addStyleNames='{res.css.errorImg}'></g:Anchor>
					</td>
					<td>
						<g:HTML ui:field="message" addStyleNames="{style.message}"></g:HTML>
					</td>
					<td style="width: 20px;">
						<g:Anchor ui:field="close" addStyleNames='{res.css.close}'></g:Anchor>
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>