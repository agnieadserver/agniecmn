<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='samples'>
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name='com.google.gwt.user.User' />
	<inherits name='com.agnie.gwt.common.AgnieCommon' />
	<inherits name="com.agnie.gwt.common.FormFactor" />
	<!-- Specify the app entry point class. -->
	<entry-point class='com.agnie.gwt.client.samples' />

	<!-- Specify the paths for translatable code -->
	<source path='client' />
	<source path='shared' />
	<!-- Use ClientFactoryImplMobile for mobile form factor. -->
	<replace-with class="com.agnie.gwt.client.DesktopViewFactory">
		<when-type-is class="com.agnie.gwt.client.ViewFactory" />
		<when-property-is name="formfactor" value="desktop" />
	</replace-with>

	<replace-with class="com.agnie.gwt.client.MobileViewFactory">
		<when-type-is class="com.agnie.gwt.client.ViewFactory" />
		<when-property-is name="formfactor" value="mobile" />
	</replace-with>

	<replace-with class="com.agnie.gwt.client.TabletViewFactory">
		<when-type-is class="com.agnie.gwt.client.ViewFactory" />
		<when-property-is name="formfactor" value="tablet" />
	</replace-with>
</module>
