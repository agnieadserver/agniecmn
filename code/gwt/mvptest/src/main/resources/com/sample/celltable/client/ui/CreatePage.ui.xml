<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:c="urn:import:com.google.gwt.thirdparty.guava.common.collect">
	<ui:style>
		.name {
		padding: 0px;
		}

		.mainPanel {
		width: 50%;
		border: black;
		border-style: solid;
		border-width: thin;
		width: 300px;
		}

		.savebtnCss {
		margin-top: 100px;
		width: 200px;
		height: 30px;
		}
	</ui:style>





	<b:Panel type="DEFAULT">
		<b:PanelHeader>
			<b:Heading size="H3" text="Add User" />
		</b:PanelHeader>
		<b:PanelBody>

			<b:Form type="HORIZONTAL">
				<b:FieldSet>


					<b:FormGroup>
						<b:FormLabel for="formName" addStyleNames="col-lg-3">Enter First
							Name :</b:FormLabel>
						<g:FlowPanel addStyleNames="col-lg-9">
							<b:TextBox ui:field="textfName" b:id="formName" />
						</g:FlowPanel>
					</b:FormGroup>



					<b:FormGroup>
						<b:FormLabel for="formName" addStyleNames="col-lg-3">Enter Last
							Name:</b:FormLabel>
						<g:FlowPanel addStyleNames="col-lg-9">
							<b:TextBox ui:field="textLName" b:id="formName" />
						</g:FlowPanel>
					</b:FormGroup>


					<b:FormGroup>
						<b:FormLabel for="formName" addStyleNames="col-lg-3">Enter Age:</b:FormLabel>
						<g:FlowPanel addStyleNames="col-lg-9">
							<b:TextBox ui:field="textAge" b:id="formName" />
						</g:FlowPanel>
					</b:FormGroup>
				</b:FieldSet>

				<b:Button ui:field="buttonSave" type="PRIMARY" text="Save"></b:Button>



			</b:Form>

		</b:PanelBody>

	</b:Panel>

</ui:UiBinder> 